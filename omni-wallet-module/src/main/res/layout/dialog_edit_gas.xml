<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_receive_token_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.send.dialog.EditGasDialogFragment"
    android:paddingEnd="24dp"
    android:paddingStart="24dp"
    android:paddingBottom="16dp"
    android:clipToPadding="false">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="16dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="@string/title_edit_gas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imgClose"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@+id/txtTitle"
        app:layout_constraintTop_toTopOf="@+id/txtTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtAmount"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="32sp"
        android:textColor="@color/black"
        tools:text="0.00023 BNB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtLabelEstimateGas"
        android:drawablePadding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/txtAmount"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_baseline_info_24"
        android:text="@string/estimate_gas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/layoutEstimateGas"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelEstimateGas"
        android:background="@drawable/bg_estimate_gas_edit"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgRemove"
            android:src="@drawable/ic_baseline_remove_24"
            android:tint="@color/blue500"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:shapeAppearanceOverlay="@style/Circular"
            app:contentPadding="4dp"
            android:padding="1.3dp"
            app:strokeWidth="1.3dp"
            app:strokeColor="@color/blue500" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtEstimateGas"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            tools:text="21000"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAdd"
            android:src="@drawable/ic_baseline_add_24"
            android:tint="@color/blue500"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:shapeAppearanceOverlay="@style/Circular"
            app:contentPadding="4dp"
            android:padding="1.3dp"
            app:strokeWidth="1.3dp"
            app:strokeColor="@color/blue500" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtLabelPriceGas"
        android:drawablePadding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutEstimateGas"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_baseline_info_24"
        android:text="@string/gas_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/layoutPriceGas"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelPriceGas"
        android:background="@drawable/bg_estimate_gas_edit"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgRemove2"
            android:src="@drawable/ic_baseline_remove_24"
            android:tint="@color/blue500"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:shapeAppearanceOverlay="@style/Circular"
            app:contentPadding="4dp"
            android:padding="1.3dp"
            app:strokeWidth="1.3dp"
            app:strokeColor="@color/blue500" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtPriceGas"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            tools:text="11 GWEI"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAdd2"
            android:src="@drawable/ic_baseline_add_24"
            android:tint="@color/blue500"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:shapeAppearanceOverlay="@style/Circular"
            app:contentPadding="4dp"
            android:padding="1.3dp"
            app:strokeWidth="1.3dp"
            app:strokeColor="@color/blue500" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutPriceGas"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_wallet1"
        android:text="@string/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>